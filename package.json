{
  "name": "krowdspace-v2",
  "version": "0.5.0",
  "description": "KrowdSpace ClientSide",
  "main": "www/index.html",
  "dependencies": {
    "browserify": "^14.1.0",
    "riot": "^3.4.0",
    "riotify": "^2.0.0",
	"express": "^4.15.2"
	
  },
  "devDependencies": {
    "concurrently": "^3.4.0"
